<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Shellfie" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->

        <!-- Primary and surface colors -->
        <item name="colorPrimary">@color/darkbg</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="android:colorBackground">@color/darkbg</item>
        <item name="colorOnBackground">@color/light</item>

        <!-- Accent and error colors -->
        <item name="colorAccent">@color/brand</item>
        <item name="colorSurface">@color/dark</item>
        <item name="colorOnSurface">@color/lightbg</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>

        <!-- Secondary text color -->
        <item name="android:textColorSecondary">@color/lightgray</item>

    </style>

    <style name="CommentsDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowMinWidthMajor">90%</item> <!-- 90% of screen width -->
        <item name="android:windowMinWidthMinor">90%</item> <!-- 90% of screen width -->
    </style>

</resources>